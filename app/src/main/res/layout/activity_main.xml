<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.williamtygret.tripledouble4.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:importantForAccessibility="no"
        android:id="@+id/backgroundcolor"
        android:background="#000000"/>

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/imageView2"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:gravity="bottom|center_horizontal"-->
        <!--/>-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stunnerImage"
        android:background="@drawable/russellstunner"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_marginTop="20dp"
        android:text="Does Russell Westbrook Have a Triple-Double?"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:layout_below="@+id/stunnerImage"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|center_horizontal"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/framelayout"
        android:layout_below="@+id/title"
        android:backgroundTint="@color/colorPrimary">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearlayout"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|top">


            <!--<TextView-->
                <!--android:layout_width="262dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/title"-->
                <!--android:text="Does Russell Westbrook Have a Triple-Double?"-->
                <!--android:textColor="#ffffff"-->
                <!--android:textSize="12dp"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_toEndOf="@+id/stunnerImage"-->
                <!--/>-->

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:layout_margin="20dp"
            android:id="@+id/answer"
            android:text="Not Yet..."
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal|bottom"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stats"
        android:layout_below="@+id/answer"
        android:layout_marginLeft="50dp"
        android:layout_centerHorizontal="true"
        android:weightSum="3"
        android:orientation="horizontal">



            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/points"
            android:layout_weight="1"
            android:text="Points: "
            android:textColor="#ffffff"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/assists"
                android:layout_weight="1"
                android:text="Assists: "
                android:layout_gravity="right"
                android:textColor="#ffffff"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rebounds"
                android:layout_weight="1"
                android:text="Rebounds: "
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>


        </LinearLayout>



    </FrameLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:id="@+id/lightningCenter"
        android:background="#00000000"
        android:layout_below="@+id/framelayout"
        android:layout_centerHorizontal="true"
        android:src="@drawable/lightning"/>

